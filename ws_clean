def jobName = "learn-jenkins-app"  // Change this to the job name you want to clean up

def job = Jenkins.instance.getItemByFullName(jobName)
if (job == null) {
    println "‚ùå Job not found: ${jobName}"
    return
}

def workspaceDir = new File(Jenkins.instance.getRootDir(), "workspace/${job.name}")
if (workspaceDir.exists()) {
    println "üßπ Deleting workspace: ${workspaceDir.absolutePath}"
    workspaceDir.deleteDir()
    println "‚úÖ Workspace deleted."
} else {
    println "‚ö†Ô∏è Workspace not found at ${workspaceDir.absolutePath}"
}
